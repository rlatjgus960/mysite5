<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="user">

	<!-- 1사람의 정보 가져오기(로그인 확인용) -->
	<select id="selectUser" parameterType="com.javaex.vo.UserVo" resultType="com.javaex.vo.UserVo">
      <![CDATA[
         select no, name
         from users
         where id= #{id}
         and password= #{password}
      ]]>
	</select>

	<!-- 회원가입 -->
	<insert id="insertUser" parameterType="com.javaex.vo.UserVo">
		insert into users
		values(seq_user_no.nextval, #{id}, #{password}, #{name}, #{gender})
	</insert>


	<!-- 회원정보 수정용 한명 정보 가져오기 -->
	<select id="getUserInfo" parameterType="int" resultType="com.javaex.vo.UserVo">
      <![CDATA[
         select no, id, password, name, gender 
         from users
         where no= #{no}
      ]]>
	</select>
	
	<!-- 회원정보 수정 -->
	<update id="modifyUser" parameterType="com.javaex.vo.UserVo">
		update users
		set password = #{password},
			name = #{name},
			gender = #{gender}
		where no = #{no}
	
	</update>
	
	
	<!-- ajax 아이디 중복체크용 vo 가져오기 -->
		<select id="selectUserIdck" parameterType="String" resultType="com.javaex.vo.UserVo">
      <![CDATA[
         select no, id, password, name, gender 
         from users
         where id= #{id}
      ]]>
	</select>
	


</mapper>